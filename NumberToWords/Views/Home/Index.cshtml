@model NumberToWordsSite.Controllers.HomeController.AmountRequest

@{
    ViewData["Title"] = "Number To Words Converter";
}

<h2>@ViewData["Title"]</h2>

<!-- Razor Form with Text Input and Submit Button -->
@using (Html.BeginForm("ConvertToWords", "Home", FormMethod.Post, new { @class = "form-group" }))
{
    <div class="mb-3">
        @Html.LabelFor(model => model.Amount, "Enter a Number", new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Amount, new { 
            @class = "form-control", 
            placeholder = "Enter a number", 
            id = "numberInput" 
        })
    </div>

    <div>
        <input type="submit" value="Convert" class="btn btn-primary" />  <!-- Submit Button -->
    </div>
}

<!-- Display the Result if Available -->
@if (ViewData["Result"] != null)
{
    <div id="result" class="mt-3 alert alert-success">
        @ViewData["Result"]
    </div>
}

<!-- Display an Error if Available -->
@if (ViewData["Error"] != null)
{
    <div class="mt-3 alert alert-danger">
        @ViewData["Error"]
    </div>
}